                " Height="75" FontWeight="Bold" FontSize="24" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Label Content="StasiukYuryS@Gmail.com" HorizontalAlignment="Left" Margin="10,597,0,0" VerticalAlignment="Top" Foreground="#FF1154C9" FontWeight="Bold" FontSize="24" Grid.ColumnSpan="4" Width="539" Background="{x:Null}" Opacity="0.5" Height="42"/>

    </Grid>
</Window>
