        <Button x:Name="ButtonSand" Content="Песок" Margin="10,191,0,0" VerticalAlignment="Top" Height="75" FontWeight="Bold" FontSize="24" Grid.Column="1" HorizontalAlignment="Left" Width="200
                " Grid.ColumnSpan="2"/>
